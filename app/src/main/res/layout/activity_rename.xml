<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:theme="@style/SciekiTheme">

    <EditText
        android:id="@+id/edit_text_community_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#FFFFFF"
        android:theme="@style/SciekiTheme.EditText"/>

    <Button
        android:id="@+id/edit_button_community_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/edit_text_community_window"
        android:layout_alignParentStart="true"
        android:text="edytuj"
        android:theme="@style/SciekiTheme.Button"/>
</RelativeLayout>