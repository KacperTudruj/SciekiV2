<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3527"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sewage_disposal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:text="@string/sewage_disposal_text"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        tools:layouconversion_absoluteWidth="100dp" />

<!--    DODAJ POLA DO DODANIA SCIEKU -->
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="574dp"
        android:layout_below="@id/sewage_disposal"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/adress_edit_text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#CA7A04"
            android:text="@string/adress_edit_text"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="411dp" />

        <EditText
            android:id="@+id/community_edit_text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adress_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#CA7A04"
            android:text="@string/community_edit_text"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="411dp" />

        <EditText
            android:id="@+id/type_of_sewage_edit_text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/community_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#CA7A04"
            android:text="@string/type_of_sewage_edit_text"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="411dp" />


        <EditText
            android:id="@+id/quantity_of_sewage_edit_text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_of_sewage_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#CA7A04"
            android:text="@string/quantity_of_sewage_edit_text"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="411dp" />

        <Button
            android:id="@+id/add_sewage_disposal_data_button"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity_of_sewage_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#CA7A04"
            android:text="@string/add_sewage_disposal_data_button"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="411dp" />

    </RelativeLayout>

</RelativeLayout>