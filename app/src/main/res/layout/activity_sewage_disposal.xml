<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/SciekiTheme"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sewage_disposal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical"
        android:text="@string/sewage_disposal_text" />

    <!--    DODAJ POLA DO DODANIA SCIEKU -->
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="574dp"
        android:layout_below="@id/sewage_disposal"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/adress_edit_text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="@string/adress_edit_text"
            android:textColor="#FFFFFF"
            android:theme="@style/SciekiTheme.EditText" />

        <Spinner
            android:id="@+id/community_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adress_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/type_of_sewage_edit_text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/community_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="@string/type_of_sewage_edit_text"
            android:textColor="#FFFFFF"
            android:theme="@style/SciekiTheme.EditText" />


        <EditText
            android:id="@+id/quantity_of_sewage_edit_text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_of_sewage_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="@string/quantity_of_sewage_edit_text"
            android:inputType="numberDecimal"
            android:theme="@style/SciekiTheme.EditText" />

        <Button
            android:id="@+id/add_sewage_disposal_data_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/quantity_of_sewage_edit_text"
            android:text="@string/add_sewage_disposal_data_button"
            android:theme="@style/SciekiTheme.Button" />

    </LinearLayout>

</RelativeLayout>